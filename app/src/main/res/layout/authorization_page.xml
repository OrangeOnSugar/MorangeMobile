<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7790A">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="70dp"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@drawable/auth"/>

            <TextView
                android:id="@+id/pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_image"
                android:layout_marginTop="15dp"
                android:text="Авторизация"
                android:textColor="@android:color/black"
                android:gravity="center"
                style="@style/Text"
                android:textSize="30dp"/>


            <EditText
                android:id="@+id/mail_au"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/pop"
                android:hint="Почта..."
                android:text=""
                android:inputType="textEmailAddress"
                android:background="@drawable/edita"
                android:padding="6dp"
                android:drawableStart="@drawable/secured_letter_48px"
                android:drawableLeft="@drawable/secured_letter_48px"
                android:layout_marginTop="35dp"
                android:layout_marginRight="33dp"
                android:layout_marginLeft="33dp"/>

            <EditText
                android:id="@+id/pass_au"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/mail_au"
                android:hint="Пароль..."
                android:text=""
                android:inputType="textPassword"
                android:background="@drawable/edita"
                android:padding="6dp"
                android:drawableStart="@drawable/password_48px"
                android:drawableLeft="@drawable/password_48px"
                android:layout_marginTop="20dp"
                android:layout_marginRight="33dp"
                android:layout_marginLeft="33dp"/>


            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass_au"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:text="Забыли пароль?"
                android:layout_marginRight="20dp"
                android:textColor="#FFF"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/Authorizbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Готово"
                android:textColor="@android:color/black"
                android:background="@drawable/buttona"
                android:layout_below="@id/forget_pass"
                android:layout_marginTop="15dp"
                android:layout_marginRight="63dp"
                android:layout_marginLeft="63dp"/>

            <TextView
                android:id="@+id/registrationgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Authorizbu"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="15dp"
                android:text="У меня нет аккаунта" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>